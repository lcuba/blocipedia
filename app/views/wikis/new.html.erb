<h1 class='text-center'>Create New Wiki</h1>
<br />

<div class='row'>
    <div class='col-md-12'>
        <%= form_for @wiki do |f| %>
            <div class="form-group">
                <%= f.label :title %><br />
                <%= f.text_field :title, class: 'form-control', autofocus: true %>
            </div>
            <div class="form-group">
                <%= f.label :body %><br />
                <%= f.text_area :body, rows: 20, class: 'form-control' %>
            </div>
            <% if current_user.admin? || current_user.premium? || @wiki.users.include?(current_user) %>
                <div class='form-check'>
                    <%= f.check_box :private, class: 'form-check-input' %>
                    <%= f.label :private, class: 'form-check-label' do %> 
                    Private Wiki
                    <% end %>
                </div>
            <% end %>
            <div class='form-group'>
                <%= f.submit "Create Wiki", class: 'btn btn-success' %>
            </div><br />
        <% end %>
    </div>
</div>