<h1 class='text-center'>Edit Wiki</h1>
<br />

<div class='row'>
    <div class='col-md-12'>
        <%= form_for @wiki do |f| %>
            <div class="form-group">
                <%= f.label :title %><br />
                <%= f.text_field :title, class: 'form-control', autofocus: true %>
            </div>
            <div class="form-group">
                <%= f.label :body %><br />
                <%= f.text_area :body, rows: 20, class: 'form-control' %>
            </div>
            <% if current_user.admin? || current_user.premium? %>
                <div class='form-check'>
                    <%= f.check_box :private, class: 'form-check-input' %>
                    <%= f.label :private, class: 'form-check-label' do %> 
                    Private Wiki
                    <% end %>
                </div>
                <div class="form-group">
                    <%= render partial: 'form', locals: {f: f, collaborators: @wiki.collaborators} %>
                </div>
            <% end %>
            <div class='form-group'>
                <%= f.submit "Create", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>